@using Model.Models
@model IEnumerable<Animal>
@{
    ViewData["Title"] = "Animals";
}

<body>

    <section class="u-align-center u-clearfix u-palette-4-light-2 u-section-2">
        <div class="u-expanded-width u-palette-4-base u-shape u-shape-rectangle u-shape-1"></div>
        <div class="u-align-center u-container-style u-group u-shape-rectangle u-group-1">
            <div class="u-container-layout u-valign-middle-md u-valign-middle-sm u-valign-middle-xs">
                <h2 class="u-align-center u-custom-font u-font-lobster u-text u-text-1">The animal in the shop</h2>
            </div>
        </div>
        @Html.Partial("_CategorySelector")
        <div class="u-gallery u-layout-grid u-lightbox u-show-text-on-hover u-gallery-1">
            <div class="u-gallery-inner u-gallery-inner-1">
                @foreach (var item in Model)
                {
                    <div class="u-effect-fade u-effect-hover-zoom u-gallery-item u-shape-rectangle">
                        <div class="u-back-slide" data-image-width="872" data-image-height="872" style="width: 20rem; height: 20rem;">
                            <img class="u-back-image u-expanded" src="..//@item.PictureLink" style="width: 20rem; height: 20rem;">
                        </div>
                        <a asp-action="Details" asp-route-Id="@item.AnimalId" asp-controller="Animal">
                            <div class="u-over-slide u-shading u-over-slide-1">
                                <h3 class="u-gallery-heading">@item.Name</h3>
                                <p class="u-gallery-text"></p>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </section>

</body>
