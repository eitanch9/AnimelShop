@{
    ViewData["Title"] = "connect";
}

<section class="u-align-center u-clearfix u-gradient u-section-2" id="sec-6b04">
    <div class="u-clearfix u-sheet u-sheet-1">

        <h1 class="u-custom-font u-font-lobster ">Log in as an aministrator</h1>

        <div class="u-form u-form-1">
            <form asp-action="tryConnect" asp-controller="Administrator" method="post" class="u-clearfix u-form-spacing-10 u-inner-form" style="padding: 10px;">
                    <div class="u-form-group u-form-message">
                        <label class="u-label">name</label>
                        <input type="text" name="name" required class="u-btn u-btn-round u-button-style u-radius-40 " />
                        <label class="u-label">password</label>
                        <input type="password" name="password" required class="u-btn u-btn-round  u-button-style u-radius-40" />

                    <input type="submit" value="connect" class="u-border-none u-btn u-btn-round u-btn-submit u-button-style u-palette-4-dark-2 u-radius-23 u-text-body-color u-btn-2" />

                    </div>

                </form>
            </div>

        </div>
    
</section>